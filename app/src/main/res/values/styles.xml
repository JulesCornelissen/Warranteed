<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextField" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/text_field_border</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="Button" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/round_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans</item>
    </style>
    <style name="CloseButton" parent="Button">
        <item name="android:background">@drawable/red_close_icon</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>