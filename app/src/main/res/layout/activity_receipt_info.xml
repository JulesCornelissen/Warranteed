<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ReceiptInfo">

    <TextView
        android:id="@+id/receiptInfo_edate_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_date"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_duration_filled"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_duration_filled" />

    <TextView
        android:id="@+id/receiptInfo_name"
        android:layout_width="252dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/worksans"
        android:text="Name"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="70dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:text="back"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/receiptInfo_name" />

    <TextView
        android:id="@+id/receiptInfo_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Store:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_name"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_name" />

    <TextView
        android:id="@+id/receiptInfo_purchase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase date:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_store"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_store" />

    <TextView
        android:id="@+id/receiptInfo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warranty duration:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_purchase_date"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_purchase_date" />

    <TextView
        android:id="@+id/receiptInfo_edate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiration date:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_duration"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_duration" />

    <TextView
        android:id="@+id/receiptInfo_store_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:text="@string/store"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/receiptInfo_store"
        app:layout_constraintTop_toTopOf="@+id/receiptInfo_store" />

    <TextView
        android:id="@+id/receiptInfo_purchase_date_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_date"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_store_filled"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_store_filled" />

    <TextView
        android:id="@+id/receiptInfo_duration_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 years"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_purchase_date_filled"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_purchase_date_filled" />

    <TextView
        android:id="@+id/textView_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_edate"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_edate" />

    <TextView
        android:id="@+id/textView_product_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iphone 7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/receiptInfo_edate_filled"
        app:layout_constraintTop_toBottomOf="@+id/receiptInfo_edate_filled" />

    <ImageView
        android:id="@+id/imageView_zoomed"
        android:layout_width="368dp"
        android:layout_height="631dp"
        android:contentDescription="Picture of receipt"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_return"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/imageButton_zoom"
        android:layout_width="313dp"
        android:layout_height="372dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Button to open receipt"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_product"
        tools:srcCompat="@tools:sample/avatars" />



</androidx.constraintlayout.widget.ConstraintLayout>